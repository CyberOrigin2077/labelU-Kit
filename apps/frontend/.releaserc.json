{
  "branches": ["release", { "name": "beta", "prerelease": true }, { "name": "alpha", "prerelease": true }],
  "plugins": [
    [
      {
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [{ "path": "./*.zip", "label": "frontend app distribution" }]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci] \n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "publishCmd": "node ./scripts/release.js ./publish.sh ${nextRelease.version} ${branch.name} ${Date.now()}"
      }
    ]
  ]
}
